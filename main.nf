    format = params.singleEnd ? "BAM" : "BAMPE"
    """
    macs2 callpeak \\
         -t ${ipbam[0]} \\
         -c ${controlbam[0]} \\
         $broad \\
         -f $format \\
         -g ${params.macs_gsize} \\
         -n $ip \\
