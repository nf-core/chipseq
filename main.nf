    grep 'mapped (' $ipflagstat | awk -v a="\$READS_IN_PEAKS" -v OFS='\t' '{print "${ip}", a/\$1}' | cat $mlib_frip_score_header - > ${ip}_peaks.FRiP_mqc.tsv
